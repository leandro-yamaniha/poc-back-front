# Environment variables for docker-compose-java.yml
# Copy this file to .env (same folder) and adjust if needed

# Backend ports
BACKEND_HOST_PORT=8085   # host port published by the backend container
BACKEND_PORT=8085        # internal port the backend listens on

# Frontend port
FRONTEND_HOST_PORT=3001  # host port published by the frontend container (container uses 3000 internally)

# API URL used by the frontend (defaults to backend host port)
REACT_APP_API_URL=http://localhost:8085/api

# Optional: Cassandra host port mapping (if you decide to parameterize it later)
# CASSANDRA_HOST_PORT=9043
